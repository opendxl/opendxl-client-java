<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn" name="MyApp" packages="">
    <Appenders>
        <Console name="nonError" target="SYSTEM_OUT">
            <PatternLayout pattern="%5p: %m%n"/>
            <LevelRangeFilter minLevel="DEBUG" maxLevel="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
            <DynamicThresholdFilter key="isVerbose" defaultThreshold="INFO"
                                    onMatch="ACCEPT" onMismatch="DENY">
                <KeyValuePair key="DEBUG" value="DEBUG"/>
            </DynamicThresholdFilter>
        </Console>
        <Console name="error" target="SYSTEM_ERR">
            <PatternLayout pattern="%5p: %m%n"/>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="error">
            <AppenderRef ref="nonError"/>
            <AppenderRef ref="error"/>
        </Root>
    </Loggers>
</Configuration>